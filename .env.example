# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Vector Store Configuration
# Options: file, chroma, redis, mariadb
# Default: file (no external dependencies required)
VECTOR_STORE_TYPE=file

# ChromaDB Configuration (only needed if VECTOR_STORE_TYPE=chroma)
CHROMA_URL=http://localhost:8000

# Redis Configuration (only needed if VECTOR_STORE_TYPE=redis)
# Requires Redis Stack (not standard Redis)
REDIS_URL=redis://localhost:6379

# MariaDB Configuration (only needed if VECTOR_STORE_TYPE=mariadb)
# Requires MariaDB 11.6+ for vector support
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=
MARIADB_DATABASE=clonewriter
